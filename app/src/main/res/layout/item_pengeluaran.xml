<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
>
    <androidx.cardview.widget.CardView
                                       android:layout_width="fill_parent"
                                       android:layout_height="wrap_content"
                                       app:cardCornerRadius="6.0dip" app:cardElevation="2.0dip"
                                       app:cardUseCompatPadding="true">
        <LinearLayout android:orientation="horizontal" android:padding="@dimen/spacing_large"
                      android:layout_width="fill_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="20.0dip" android:layout_height="20.0dip"
                            android:layout_marginTop="1.0dip">
                <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent"
                           android:tint="@color/grey_10" android:layout_centerInParent="true"
                           app:srcCompat="@drawable/shape_circle"/>
                <ImageView android:layout_width="15.0dip" android:layout_height="15.0dip"
                           android:tint="@color/grey_40" android:layout_centerInParent="true"
                           app:srcCompat="@drawable/ic_arrow_downward"/>
            </RelativeLayout>
            <View android:layout_width="@dimen/spacing_middle" android:layout_height="0.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="0.0dip"
                          android:layout_height="wrap_content" android:layout_weight="1.0">
                <TextView android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                          android:textColor="@color/indigo_900" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="Receive"
                          android:id="@+id/jenis_pengeluaran"/>
                <TextView android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                          android:textColor="@color/grey_40" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="Title Keterangan"
                          android:id="@+id/penggunaan"/>
            </LinearLayout>
            <LinearLayout android:gravity="end" android:orientation="vertical"
                          android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                          android:textColor="@color/light_blue_500" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="IDR 4.000.000"
                          android:id="@+id/jumlah_uang"/>
                <TextView android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                          android:textColor="@color/grey_40" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="10 jan 2018 08:55" android:id="@+id/time"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>